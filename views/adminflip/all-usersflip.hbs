<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12 p-5 mt-3">
                <h2 class="mb-4">User Details</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th>Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td>{{this.Name}}</td>
                            <td>{{this.Email}}</td>
                            <td>
                                <a href="/admin/all-orders/{{this._id}}" class="btn btn-primary">All Orders</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>