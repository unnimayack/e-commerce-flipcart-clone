<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12 p-4 mt-5">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th>Address</th>
                            <th>Pincode</th>
                            <th>Mobile</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Payment</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                        <tr>

                            <td>{{this.date}}</td>
                            <td>{{this.deliveryDetails.address}}</td>
                            <td>{{this.deliveryDetails.pincode}}</td>
                            <td>{{this.deliveryDetails.mobile}}</td>
                            <td>{{this.totalAmount}}</td>
                            <td>{{this.paymentMethod}}</td>
                            <td>{{this.status}}</td>

                            <td>
                                <a href="/admin/all-ordered-products/{{this._id}}" class="btn btn-primary">View
                                    Products</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>