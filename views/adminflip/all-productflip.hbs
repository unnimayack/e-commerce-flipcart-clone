<section>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card mt-5">
                    <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="">
                    <div class="card-body">
                        <h5 style="font-size: 24px" class="card-title">{{this.Name}}</h5>
                        <p style="font-size: 18px" class="card-text">{{this.Description}}</p>
                        <p style="font-size: 20px" class="card-text">Rs:{{this.Price}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<style>
    .card {
        background-color: rgb(219, 198, 198);
        margin-top: 30%;
        flex: 1;
        height: 60vh;
    }

    .card-img-top {
        width: 100%;
        height: 50%;
        object-fit: cover;
    }
</style>