<section>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card">
                    <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        <p class="card-text">Rs:{{this.Price}}</p>

                        <button id="addto" onclick="addToCart('{{this._id}}')" class="btn btn-primary m">Add To
                            Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

{{>user-footer}}